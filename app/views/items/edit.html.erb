<div class="col-sm-12 my-auto">
  <h2 style="color: #B00100; margin: 0 auto">Edit <%= @item.name.camelize %></h2> <br/>

<%= simple_form_for @item  do |f| %>
  <div class="form-group row">
    <div class="col-sm-10">
  <%= f.input :name, input_html: { class: "form-control form-control-sm",
                                   id: "colFormLabelSm" } %>
    </div>
    <div class="col-sm-10">
  <%= f.input :price , input_html: { class: "form-control form-control-sm",
                                     id: "colFormLabelSm" },required: true %>
    </div>
    <div class="col-sm-10">
  <%= f.input :description , input_html: { class: "form-control form-control-sm",
                                           id: "colFormLabelSm" } %>
    </div>
    <div class="col-sm-10">
  <%= f.button :submit , class: "btn btn-secondary", style: "margin-top: 15px" %>
    </div>
  </div>
<% end %>

<br/>
<%= link_to "index",items_path %><br/>

<%= render partial: 'shared/email' %>
</div>
